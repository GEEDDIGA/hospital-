# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,hospital-x5t5.onrender.com

# Database Configuration
# For PostgreSQL (Production)
DATABASE_URL=postgres://user:password@localhost:5432/hospital_db
# For SQLite (Local Development) - leave DATABASE_URL blank
# DATABASE_URL=

# Redis Cache (Optional)
REDIS_URL=redis://127.0.0.1:6379/1

# Email Configuration (Gmail Example)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@hospital.com

# Sentry Error Monitoring (Optional)
SENTRY_DSN=

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://hospital-x5t5.onrender.com

# Admin Credentials (Set during initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@hospital.com
ADMIN_PASSWORD=your-secure-password-here

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=production
